{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@global": ["./global.ts"],
      "@/*": ["./src/*"],
      "@Routes/*": ["./src/routes/*"]
    }
  },
  "include": ["src", "server.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
